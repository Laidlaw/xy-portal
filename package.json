{
	"name": "portal-sidenotes",
	"version": "1.0.0",
	"description": "Obsidian plugin for Tufte-style sidenotes using portal metaphor",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"sidenotes",
		"tufte",
		"writing",
		"portals"
	],
	"author": "Portal Plugin Team",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^22.9.0",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"builtin-modules": "^4.0.0",
		"esbuild": "^0.24.0",
		"eslint": "^9.15.0",
		"obsidian": "^1.7.2",
		"tslib": "^2.8.1",
		"typescript": "^5.6.3"
	}
}